<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Language Learning Assistant</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/css/flag-icon.min.css" rel="stylesheet">
    
</head>
<body>
    <div id="languageModal" class="modal">
        <div class="modal-content">
            <h2>Choose Your Language</h2>
            <div class="language-options">
                <!-- Note: Language codes MUST match flag-icon classes -->
                <button data-lang="fr">
                    <span class="flag-icon flag-icon-fr"></span>
                    French
                </button>
                <button data-lang="es">
                    <span class="flag-icon flag-icon-es"></span>
                    Spanish
                </button>
                <button data-lang="de">
                    <span class="flag-icon flag-icon-de"></span>
                    German
                </button>
                <button data-lang="it">
                    <span class="flag-icon flag-icon-it"></span>
                    Italian
                </button>
                <button data-lang="jp">
                    <span class="flag-icon flag-icon-jp"></span>
                    Japanese
                </button>
                <button data-lang="br">
                    <span class="flag-icon flag-icon-br"></span>
                    Portuguese
                </button>
                <button data-lang="kr">
                    <span class="flag-icon flag-icon-kr"></span>
                    Korean
                </button>
                <button data-lang="kh">
                    <span class="flag-icon flag-icon-kh"></span>
                    Khmer
                </button>
            </div>
        </div>
    </div>

    <div id="appContent" class="hidden">
        <header>
            <h1>Language Learning</h1>
            <div class="level-indicator">Level: <span id="level">1</span></div>
        </header>

        <main>
            <div class="phrase-container">
                <h2>Phrase to Translate</h2>
                <div class="phrase-text">
                    <span id="languageOutput"></span>
                    <button id="ttsButton" class="tts-button" title="Play pronunciation">
                        <svg width="24" height="24" viewBox="0 0 24 24">
                            <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"/>
                        </svg>
                    </button>
                </div>
            </div>

            <div class="feedback-container">
                <h3>Feedback</h3>
                <div class="feedback-content" id="feedback"></div>
            </div>

            <div class="memory-container">
                <h3>Progress Tracking</h3>
                <ul class="memory-list" id="memoryList"></ul>
            </div>
        </main>

        <div class="input-container">
            <input type="text" id="userInput" placeholder="Type your translation here..." autofocus />
            <button id="sendButton">Send</button>
        </div>
    </div>

    <script src="/script.js"></script>
</body>
</html>
